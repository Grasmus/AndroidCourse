<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_cancel_alll_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel all notifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_notification_messaging"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_show_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show notification"
        app:layout_constraintBottom_toTopOf="@+id/button_show_notification_inbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_show_notification_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show notification inbox"
        app:layout_constraintBottom_toTopOf="@+id/button_show_notification_messaging"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_notification"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button_show_notification_messaging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show notification messaging"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel_alll_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_notification_inbox"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
